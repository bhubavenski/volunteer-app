datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["fullTextSearch"]
}

enum Role {
  ADMIN
  INITIATOR
  USER
}

enum Status {
  TODO
  IN_PROGRESS
  DONE
}

model User {
  id            String       @id @default(uuid())
  username      String       @unique
  email         String       @unique
  password      String
  firstName     String?
  lastName      String?
  role          Role
  authored      Initiative[] @relation("InitiativeAuthor") // Един потребител може да е автор на много инициативи
  participations Initiative[] @relation("InitiativeParticipants") // Много към много, без `references`
  Task          Task[]
  profileImg    String?
}

model Initiative {
  id           String     @id @default(uuid())
  title        String
  description  String
  excerpt      String
  location     String
  actionDate   DateTime
  categories   Category[] @relation("InitiativeCategories")
  participants User[]     @relation("InitiativeParticipants") // Много към много, без `references`
  mapEmbedUrl  String?
  imagesUrls   String[]
  Task         Task[]
  author       User       @relation("InitiativeAuthor", fields: [userId], references: [id]) // Един към много
  userId       String
}

model Category {
  id          String       @id @default(uuid())
  name        String       @unique
  initiatives Initiative[] @relation("InitiativeCategories")
}

model Task {
  id           String     @id @default(uuid())
  status       Status
  title        String
  description  String?
  assignedTo   User?      @relation(fields: [userId], references: [id])
  // make it as index
  initiative   Initiative @relation(fields: [initiativeId], references: [id])
  userId       String?
  initiativeId String
}

